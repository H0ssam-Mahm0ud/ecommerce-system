@model ProductVM

@{
    ViewBag.PageTitle = "Product Management";
    ViewBag.CardTitle = "Create Product";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product.Name" class="control-lable">Name</label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-lable">Description</label>
                <textarea asp-for="Product.Description" class="form-control"></textarea>
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-lable">Price</label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Image" class="control-lable">Image</label>
                <input type="file" name="file" id="imageFile" class="form-control" onchange="fillimage(event);" />
            </div>
            <div class="form-grou">
                <label asp-for="Product.CategoryId" class="control-lable">Category</label>
                <select asp-for="Product.CategoryId" asp-items="Model.CategoryList" class="form-control">
                    <option selected disabled>-- Select Category --</option>
                </select>
            </div>
            <div class="form-group mt-3">
                <button type="submit" class="btn btn-outline-primary">Create</button>
                <a asp-action="Index" asp-controller="Category" class="btn btn-outline-secondary">Back</a>
            </div>
        </form>
    </div>

    <div class="col-md-4">
        <div class="container">
            <img id="ImagePreview" src="~/@Model.Product.Image" width="320" height="300" />
        </div>
    </div>

</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        var fillimage = function(event){
            var imageholder = document.getElementById("ImagePreview");
            imageholder.src = URL.createObjectURL(event.target.files[0]);
        }
    </script>

}

